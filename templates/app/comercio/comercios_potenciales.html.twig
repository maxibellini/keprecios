{% extends 'base.html.twig' %}

{% block title %}KePrecios{% endblock %}



{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code {  padding: 2px 6px; }
    .colorboton {
      background-color: white; color: #FF9071;  
       border: 1px solid #FF9071;
    }
    .colorboton:hover , .colorboton:focus, .colorboton:active , coloboton.active {

    background-color: #FF9071;
        border: 1px solid #FF9071;
     
    color: white;

    }
</style>

<div class="example-wrapper" style="background-color: rgb(255, 0, 0,0.0)">
{% for flash_message in app.session.flashbag.get('exito') %}
    <div class="alert alert-success" style="; border-radius: 5px 5px 5px 5px; -moz-border-radius: 5px 5px 5px 5px; -webkit-border-radius: 5px 5px 5px 5px; border: 0px solid #000000; ">
        {{ flash_message }}
    </div>
{% endfor %}
{% for flash_message in app.session.flashbag.get('fracaso') %}
    <div class="alert alert-danger" style="background-color: rgba(255, 0, 0 ,0.75); border-radius: 5px 5px 5px 5px; -moz-border-radius: 5px 5px 5px 5px; -webkit-border-radius: 5px 5px 5px 5px; border: 0px solid #000000;">
        {{ flash_message }}
    </div>
{% endfor %}
<a href="javascript:history.back()" style="float: right"> Volver Atrás</a>
      <br>
         <div class="row" >      
          <div class="mbr-section-head mb-4">
              <h3 class="mbr-section-title mbr-fonts-style align-center mb-0 display-2">
                  <strong>Comercios potenciales</strong></h3>
              <h5 class="mbr-section-subtitle mbr-fonts-style align-center mb-0 mt-2 display-5">¡Ayudá a estos comercios a ingresar a keprecios!</h5> 
              <h5 class="mbr-section-subtitle mbr-fonts-style align-center mb-0 mt-2 display-5">Necesitan to voto para que se puedan cargar ofertas en ellos</h5>             
          </div>
          <div class="row" >
             {% for comercio in comercios %}
              <div class="col-sm-4">
                <div class="item-wrapper tarjeta ampliar3">
                  {% if comercio.image != null %}
                      {% set foto = 'uploads/images/comercios/'~ comercio.image %}
                      {% set foto2 = absolute_url(asset(foto)) %}

                      {% else %}  
                      {% set foto2 = 'assets/images/comercio-empty-v2.png' %} 

                  {% endif %}
                  <a href="{{path('app_comercio_perfil',{ 'id': comercio.id })}}" style="color: #E85395">
                  <div id="foto" style="   background-image: url('{{foto2}}');background-size: 100% auto; background-position: center; height: 150px; "></div></a>
                  <div style="height: 1rem;"></div>
                  <center class="display-7" style=" font-size: 150%; -webkit-text-stroke: 1px #824434;color: #FFCFC1 "><b>{{comercio.nombreComercio}}</b></center>
                  <center class="display-7" style=" font-size: 100%; color: #E85395 "><a href="{{path('app_comercio_perfil',{ 'id': comercio.id })}}" class="text-danger">Ver más..</a></center>
                  <div style="height: 1rem;"></div>

                </div>  
                <div style="height: 1rem;"></div>
              </div>  
             {%endfor%}
          </div>
            
         </div>
            
            
            
            
            
        </div> 


    <br>

{% endblock %}
